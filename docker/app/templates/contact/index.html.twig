            </button>
        </div>

        <form class="form-inline">
            <a class="btn btn-danger" style="position:fixed; right:20px" href="{{path('app_logout')}}">DÃ©connexion</a>
        </form>
    </nav>
</header>
<div class="page">

{% if app.user %}
  

    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Phonenumber</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in app.user.contacts %}
        
            <tr>
                <td>{{ contact.firstname }}</td>
                <td>{{ contact.lastname }}</td>
                <td>{{ contact.phonenumber }}</td>
                <td>{{ contact.email }}</td>
                <td>
                    <a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                    {{ include('contact/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endif %}


    <a href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
